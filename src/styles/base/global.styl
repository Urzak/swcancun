// Global CSS goes here
body
	// min-height: 2000px
	// padding-top: 70px
	font-family: 'Roboto', sans-serif;

.clear75
	display block
	width 100%
	height 75px
	clear both
.clear35
	display block
	width 100%
	height 35px
	clear both
	
.navbar
	-webkit-transition: all 0.4s ease
	transition: all 0.4s ease
.navbar-default
	-webkit-transition: all 0.4s ease
	transition: all 0.4s ease
.navbar-right
	padding-top: 40px
	li
		>a
			&:hover
				background-color: transparent !important
			&:focus
				background-color: transparent !important
.navbar-brand
	padding: 0 15px !important
	
.footer
	background-color: #F1582C
	text-align: center
	color: white

.container-fluid
	padding-left: 0	!important
	padding-right: 0 !important
.img-home
	background-image: url('../images/banner.jpg')
	// background-color: black
	min-height: 100vh
.ab-tes
	background-image: url('../images/supermercado.jpg')
	min-height: 30vh
.parallax-img
	position: relative
	// opacity: 0.65
	background-attachment: fixed
	background-position: center
	background-repeat: no-repeat
	background-size: cover
	
.text-home
	padding-top: 20%
	text-align: center
	font-weight: 700
	font-size: 40px
	color: white
		
.owl-carousel
	padding-right: 50px
	padding-left: 50px
#logo
	background-size: 150px 100px
	width: 150px
	height: 100px
	background-repeat: no-repeat
	background-position: left center
	display: block
	
#about
	font-size: 25px
	
.btn-orange
	background-color: #F1582C !important
	border-color: #F1582C !important